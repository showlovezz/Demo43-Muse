<section id="muse_form">
	<div class="container">
		<div class="row">
			<div class="col-10 offset-1 col-sm-10 offset-sm-1">
				
				<%= form_for @post do |f| %>
					<% if @post.errors.any? %>
						<h2>We have some errors here !</h2>
						<ul>
					 		<% @post.errors.full_messages.each do |msg| %>
						 		<li><%= msg %></li>
							<% end %>
					 	</ul>
					<% end %>

					<div class="form-group">
						<%= f.label :title, "Title：" %>
						<%= f.text_field :title, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :link, "Link：" %>
						<%= f.text_field :link, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :description, "Description：" %>
						<%= f.text_area :description, rows: "9", class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :rating, "Rating：" %>
						<%= f.text_field :rating, class: "form-control" %>
					</div>
					<div class="form-group">
						<div class="custom-file">
						  <%= f.file_field :image, class: "custom-file-input" %>
							<%= f.label :image, "Choose file", class: "custom-file-label" %>
						</div>
					</div>
					<div class="form-group">
						<%= f.submit class: "btn btn-success btn-lg" %>
					</div>
				<% end %>

			</div>
		</div>
	</div>
</section>