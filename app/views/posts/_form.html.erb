<%= form_for @post do |f| %>
	
	<% if @post.errors.any? %>
		<h2>We have some errors here !</h2>
		<ul>
	 		<% @post.errors.full_messages.each do |msg| %>
		 		<li><%= msg %></li>
			<% end %>
	 	</ul>
	<% end %>

	<div class="form-group">
		<%= f.label :title, "Title" %>
		<%= f.text_field :title %>
	</div>

	<div class="form-group">
		<%= f.label :link, "Link" %>
		<%= f.text_field :link %>
	</div>

	<div class="form-group">
		<%= f.label :description, "description" %>
		<%= f.text_area :description %>
	</div>

	<div class="form-group">
		<%= f.label :rating, "Rating" %>
		<%= f.text_field :rating %>
	</div>

	<div class="form-group">
		<%= f.submit %>
	</div>

<% end %>