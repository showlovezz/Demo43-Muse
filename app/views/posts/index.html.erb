<section id="muse_index">
	<div class="container">
		<div class="row">
			
			<% @posts.each do |post| %>	
				<div class="col-6 col-sm-3">
					<%= link_to post_path(post), class: "card", style: "text-decoration: none;" do %>
						<%= image_tag post.image_url, class: "card-img-top" %>
						<div class="content">
							<h6><%= truncate(post.title, length: 22) %></h6>
							<p><%= truncate(post.description, length: 130) %></p>
						</div>
					  <div class="card-body">
					  	<div class="card-text d-flex justify-content-end">
					  		<p><%= post.comments.count %><i class="fa fa-comment"></i></p>
					    	<p><%= post.get_upvotes.size %><i class="fa fa-heart"></i></p>
					  	</div>
					  </div>
					<% end %>
					<h6 class="text-center"><%= post.user.name %></h6>
				</div>
			<% end %>

			</div>
		</div>
	</div>
</section>
