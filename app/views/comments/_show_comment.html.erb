<% @post.comments.each do |comment| %>
	<div class="card">
	  <div class="card-body">
	  	<p class="card-text">
	  		<div class="star-rating" data-score= <%= comment.rating %> ></div>
	  	</p>
	    <h6 class="card-title"><%= comment.content %></h6>
	    <footer class="blockquote-footer">
				by <cite>
					<%= @post.user.name %>
					<%= time_ago_in_words(comment.created_at) %> ago
				</cite>
				<% if user_signed_in? %>
					<%= link_to "Delete", post_comment_path(@post, comment), method: :delete %>
				<% end %>
			</footer>
			<hr>
	  </div>
	</div>
<% end %>

<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
          return $(this).attr('data-score');
    }
  });
</script>